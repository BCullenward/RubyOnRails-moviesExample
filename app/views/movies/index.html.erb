<p style="color: green"><%= notice %></p>


<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Drive</th>
      <th>Directory</th>
      <th>Name</th>
      <th>Extension</th>
      <th>File Size</th>
    </tr>
  </thead>


  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.movie_drive %></td>
        <td><%= movie.movie_directory %></td>
        <td><%= movie.movie_filename %></td>
        <td><%= movie.movie_extension %></td>
        <td><%= movie.movie_filesize %></td>
        <td><%= link_to 'Show', movie %></td>
 
        <td><%= link_to 'Destroy', movie, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>        
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New movie", new_movie_path, class:"btn btn-secondary" %>
